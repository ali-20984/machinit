## Aliases
## Purpose: small command-line shortcuts to speed up common tasks. Keep this file strictly for aliases only.
## For functions, see assets/.functions

alias bup="brew update && brew upgrade && brew cleanup" # update Homebrew, upgrade packages, cleanup
## NOTE: Function 'll' was moved to assets/.functions — keep aliases file strictly for aliases.
alias reloaddns="dscacheutil -flushcache && sudo killall -HUP mDNSResponder"
alias dnsreload="dscacheutil -flushcache && sudo killall -HUP mDNSResponder"
alias timestamp="date +%s" # print current epoch timestamp (seconds since UNIX epoch)
alias jsrefresh="rm -rf node_modules/ package-lock.json && npm install" # remove node deps and reinstall (useful for JS projects)

# Navigation
alias ..="cd .." # go up one directory
alias ...="cd ../../.." # go up two levels
alias ....="cd ../../../../" # go up three levels
alias .....="cd ../../../../" # go up deeper (alias duplicates, intentionally lenient)
alias cd..="cd .." # alternate form to go up one (Windows-style typing habit)
alias ~="cd ~" # go to home directory
alias ~~="cd -" # switch to previous working directory (use `~~` to go to previous dir)

# Shortcuts
alias c="clear" # clear terminal screen
alias h="history" # display shell history
alias o="open ." # open current directory in Finder (macOS)

# Quick zsh editing
alias zshconf="nano ~/.zshrc" # open zsh configuration for quick edits

# Project navigation shortcuts
alias projects="cd ~/Projects" # change to ~/Projects
alias repos="cd ~/Projects"  # same as projects (Projects lives in ~/Projects -> often symlink to ~/Documents/Projects)

# Quick navigation to common user folders
alias docs="cd ~/Documents" # quickly change directory to ~/Documents
alias downloads="cd ~/Downloads" # quickly change directory to ~/Downloads
alias dl="cd ~/Downloads" # short form to go to ~/Downloads

# Quick find wrapper (name search)
alias qfind='find . -name' # find files by name in current dir

# Sockets: requires sudo
alias lsock='sudo lsof -i -P' # list network sockets (requires sudo)

# Network
alias ping_test="ping 1.1.1.1" # quick ping to Cloudflare DNS

## NOTE: Implementation moved to assets/.functions. Keep aliases file strictly for aliases.
alias localip="ipconfig getifaddr en0" # show local IP address for primary interface (macOS)

# npm short install alias
alias ni="npm install" # shorthand to install npm dependencies
alias nps="npm start" # shorthand to run `npm start` (start a JS dev server)

# Quick diagnostics
alias wtf='dmesg | tail' # “What just happened?” — show last kernel messages (requires privileges on some systems)

# Helpful playful 'up' alias — prints a fun message then shows the system uptime on the next line
alias up='echo "Time is an illusion."; uptime'

## Emoticon clipboard helpers
# These copy cute ASCII emoticons straight to the macOS clipboard using `pbcopy` —
# the exact same behavior as `shrug`.
alias shrug='echo "¯\_(ツ)_/¯" | pbcopy'                # copy shrug emoticon to clipboard
alias tableflip='echo "(╯°□°）╯︵ ┻━┻" | pbcopy'         # copy tableflip emoticon to clipboard
alias fix='echo "┬─┬ ノ( ゜-゜ノ)" | pbcopy'              # copy fix emoticon to clipboard

# Utilities / convenience
alias entropy='openssl rand -base64 64' # generate 64 bytes of base64 randomness
alias void='>/dev/null 2>&1'             # shortcut for discarding output (use in pipelines)
alias fractal='open -a Terminal .'      # open current folder in Terminal
alias eldritchterror='open https://en.wikipedia.org/wiki/Heat_death_of_the_universe' # read doom
 

# System
alias path='echo -e ${PATH//:/\\n}' # print PATH entries one-per-line
alias cpu='top -o cpu' # show top processes by CPU
alias mem='top -o rsize' # show top processes by memory usage (resident size)

# Lock the screen (when going AFK)
alias afk='pmset displaysleepnow' # put display to sleep / lock screen

# Find WiFi password, add the name:
alias wifi_pass='security find-generic-password -wa' # macOS: retrieve WiFi password from keychain (append SSID)
