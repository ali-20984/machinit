#!/usr/bin/env bash
# High-fidelity completion for ripgrep (rg)
# This is a curated list of the most commonly used flags and argument types.
#compdef rg ripgrep

local context state state_descr line

_arguments -C \
  '(-h --help)'{-h,--help}'[Show help information]' \
  '(-V --version)'{-V,--version}'[Print version]' \
  '(-n --line-number)'{-n,--line-number}'[Print line number]' \
  '--hidden[Search hidden files]' \
  '--no-ignore[Do not respect ignore files]' \
  '--smart-case[Enable smart-case matching]' \
  '--ignore-case[Ignore case]' \
  '--fixed-strings[Search using fixed strings]' \
  '--regexp=PATTERN:pattern' \
  '--iglob=GLOB:glob pattern' \
  '--glob=GLOB:glob pattern' \
  '--type=TYPE:typespec' \
  '--type-not=TYPE:exclude type' \
  '--type-list[List supported types]' \
  '--max-columns#:[Max columns]:number' \
  '--max-filesize#:[Max file size]:number' \
  '--threads#:[Number of threads]:number' \
  '--context#:[Lines of context]:number' \
  '--before-context#:[Lines of context before match]:number' \
  '--after-context#:[Lines of context after match]:number' \
  '--hidden: ' \
  '*:pattern:_files

return 0

