#!/usr/bin/env bash
# Minimal cargo completion â€” basic subcommands
#compdef cargo

local -a cmds
cmds=(
  'build:Compile the current package'
  'run:Run a binary or example of the local package'
  'test:Run the test suite'
  'bench:Run benchmarks'
  'doc:Build documentation'
  'new:Create a new cargo package'
  'init:Create a new cargo package in an existing directory'
  'install:Install a Rust binary'
  'update:Update dependencies'
  'search:Search registry for a crate'
  'publish:Upload a package to registry'
  'help:Show help'
  'check:Check if package compiles without producing artifacts'
  'clean:Remove artifacts'
  'fmt:Format code using rustfmt'
  'clippy:Run clippy lints'
  '--release:Build artifacts in release mode'
  '--package:Select a package by name'
  '--workspace:Operate on workspace'
  '--manifest-path:Path to Cargo.toml:_files'
  '--features:Cargo features to activate'
  '--no-default-features:Disable default features'
)

_describe 'cargo subcommand' cmds && return 0

_files
