#!/usr/bin/env bash
# Lightweight zsh completion helper for npx
# npx is part of npm CLI â€” fall back to npm's helper where possible

#compdef npx

local -a commands
commands=(
  'run:run a package script'
  'create:run a package scaffolding tool'
  'help:show npx help'
  'install:install package temporarily'
  '-p:pass args to binary'
)

_describe 'npx command' commands && return 0

return 1
